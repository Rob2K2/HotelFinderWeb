@model PhotoSharingApplication.Models.Hotel

@{
    ViewBag.Title = "Delete Hotel: " + Model.Name;
}

<h2>Delete Hotel: "@Model.Name"</h2>

<p>Are you sure you want to delete this hotel?</p>

@using (Html.BeginForm("Delete", "Hotel", FormMethod.Post))
{
    <div class="photo-display">
        <img width="200" src="@Url.Action("GetImage", "Hotel", new { id = Model.HotelID })" />
    </div>
            
    <div class="photo-description">
        @Html.DisplayFor(model => model.HotelSummary)
    </div>

    <div class="photo-metadata">
        <div>
            <span class="display-label">
                @Html.DisplayNameFor(model => model.UserName):
            </span>
            <span class="display-field">
                @Html.DisplayFor(model => model.UserName)
            </span>
        </div>

        <div>
            <span class="display-label">
                @Html.DisplayNameFor(model => model.CreatedDate):
            </span>
            <span class="display-field">
                @Html.DisplayFor(model => model.CreatedDate)
            </span>
        </div>
    </div>

    <p>
        <input type="submit" value="Delete" />
        @Html.ActionLink("Back to List", "Index")
    </p>
}
